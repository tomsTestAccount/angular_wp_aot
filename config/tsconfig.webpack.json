{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "pretty": false,
    "sourceMap": true,
    "lib": ["dom", "es6", "es2015", "es2016", "es2017"],
    "noEmit": true,
    "strictNullChecks": false,
    "skipDefaultLibCheck": true,
	"allowJs": true,
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "exclude": [
    "../node_modules",
    "../compiled",
	"../express-test-server",
	"../dist",
	"../dll",
    "../e2e/**/*.ts",
    "../src/server.ts",
    "../src/server.aot.ts",
    "../src/main.browser.aot.ts",
	
	"../src/app/app.component.ts"
  ],
  
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "forkChecker": true,
    "useCache": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}


